<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/stylesheets/navbar.css">
  <link rel="stylesheet" href="/stylesheets/landing.css">
  <link rel="stylesheet" href="/stylesheets/promotions.css">
  <title>Document</title>
</head>

<body>

  <%- include ./partials/navbar%>

  <%- include ./partials/mainpromos%>

  <%  const imageData = [{
    src: 'https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_puma_moment_870x1110.jpg',
    text: 'PUMA',
    subtext: 'Tailoring, but make it sporty',
  },
  {
    src: 'https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_prom_moment_870x1110.jpg',
    text: 'EVENT READY',
    subtext: 'Find something suit-able',
  },
  {
    src: 'https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_nike_running_moment_870x1110.jpg',
    text: 'NIKE RUNNING',
    subtext: 'Speed AND style',
  },
  {
    src: 'https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_vintage_supply_moment_870x1110.jpg',
    text: 'VINTAGE SUPPLY',
    subtext: 'Retro reccos',
  },
  ];%>
  <% const brandImages = ['https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/tommy-hilfiger-hp-logos-256x256.jpg', 'https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/north-face.png', 'https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/nike-hp-logos-256x256.jpg', 'https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/carhartt-hp-logos-256x256.jpg', 'https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/ellesse-hp-logos-256x256.jpg', 'https://content.asos-media.com/-/media/homepages/unisex/brands-logos/256x256/dr-martens-hp-logos-256x256.jpg'] %>


  <!-- big promo image -->
  <div class="container-fluid d-flex flex-column align-items-center position-relative mb-5">
    <img class="landing-image" src="https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/hero/mw_denim_desktophero_1258x600.jpg" alt="">
    <h2 class="landing-image-text fw-bolder">The denim refresh</h2>
    <a class="landing-image-subtext text-decoration-none fw-bold">SHOP ASOS DESIGN JEANS</a>
  </div>

  <!-- 4 promo images -->
  <div class="d-flex justify-content-center mb-5">
    <div class="row image-container">
      <% for(let i=0; i<imageData.length; i++){ %>
      <div class="col gx-3">
        <a href="" class="text-decoration-none image-container-text">
          <img class="w-100" src="<%=imageData[i].src%>" alt="">
          <div class="d-flex flex-column align-items-center justify-content-center mt-3">
            <p class="fw-bold"><%=imageData[i].text%></p>
            <p><%=imageData[i].subtext%></p>
          </div>
        </a>
      </div>
      <%}%>
  </div>
  </div>

  <!-- 2 big promo images -->
  <div class="row d-flex justify-content-center gx-0 mb-5">

  <div href="" class="col-6 d-flex justify-content-end align-items-center pe-4">
    <a href="" class="d-flex flex-column align-items-center dual-image text-decoration-none">
      <div class="">
        <img class="w-100" src="https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_topman_moment_870x1110.jpg" alt="">
      </div>
      <div class="fw-bold fs-3 text-decoration-none mt-3 text-black">
        <p>TOPMAN</p>
      </div>
      <div class="dual-image-subtext text-black">
        <p>New essentials</p>
      </div>
      <div class="image-container-text border border-2 border-dark px-3 py-3 fw-bold dual-image-shopbtn">
        <span>SHOP THE BRAND</span>
      </div>
    </a>
  </div>

  <div href="" class="col-6 d-flex justify-content-start align-items-center ps-4">
    <a href="" class="d-flex flex-column align-items-center dual-image text-decoration-none">
      <div class="">
        <img class="w-100" src="https://content.asos-media.com/-/media/homepages/mw/2022/feb/28/moments/mw_day_social_moment_870x1110.jpg" alt="">
      </div>
      <div class="fw-bold fs-3 text-decoration-none mt-3 text-black">
        <p>ASOS DAY SOCIAL</p>
      </div>
      <div class="dual-image-subtext text-black">
        <p>Feel-good garms</p>
      </div>
      <div class="image-container-text border border-2 border-dark px-3 py-3 fw-bold dual-image-shopbtn">
        <span>SHOP THE BRAND</span>
      </div>
    </a>
  </div>

  <!-- trending brands -->
  <div>
    <div class="d-flex justify-content-center pt-5">
      <p class="fs-4 fw-bolder">TRENDING BRANDS</p>
    </div>
    <section class="container d-flex justify-content-center mb-5">
      <div id="brand-image-container" class="row gx-0 d-flex justify-content-center">
        <% for(let j=0; j<brandImages.length; j++){%>
      <a class="col-2 brand-image-item" href=""><img class="w-100" src="<%=brandImages[j]%>" alt=""></a>
      <%} %>
    </div>
    </section>
  </div>


  <%- include ./partials/footer %>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="/javascripts/navbarLogic.js"></script>
</body>

</html>